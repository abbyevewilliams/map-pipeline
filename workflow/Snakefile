# Point to config file
configfile: "config/config.yaml"

# Read in sample names
with open(config["samples"]) as f:
    SAMPLES = [line.strip() for line in f]

# State reads
READS = ['1', '2']

# =================================================================================================
#     Default "All" Target Rule
